{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cache": {
    "Mode": "Off"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({Application}/{Environment}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "contoso.onmicrosoft.com",
    "TenantId": "b3b40bc6-b026-4f9b-abec-ab701dfeec71",
    "ClientId": "4b59d1fe-e515-4edf-905d-b09b04528fc3",
    "Audience": "api://ecm-host"
  },
  "ConnectionStrings": {
    "postgres": "Host=localhost;Port=5432;Database=ecm;Username=postgres;Password=postgres",
    "iam": "Host=localhost;Port=5432;Database=ecm_iam;Username=postgres;Password=postgres",
    "doc": "Host=localhost;Port=5432;Database=ecm_doc;Username=postgres;Password=postgres",
    "wf": "Host=localhost;Port=5432;Database=ecm_wf;Username=postgres;Password=postgres",
    "search": "Host=localhost;Port=5432;Database=ecm_search;Username=postgres;Password=postgres",
    "ocr": "Host=localhost;Port=5432;Database=ecm_ocr;Username=postgres;Password=postgres",
    "ops": "Host=localhost;Port=5432;Database=ecm_ops;Username=postgres;Password=postgres"
  },
  "FileStorage": {
    "BucketName": "ecm-files",
    "ServiceUrl": "http://localhost:9000",
    "AccessKeyId": "minioadmin",
    "SecretAccessKey": "minioadmin",
    "Region": "us-east-1",
    "ForcePathStyle": true
  },
  "Workflow": {
    "Camunda": {
      "BaseUrl": "http://localhost:8080/engine-rest",
      "TenantId": "default"
    }
  },
  "Database": {
    "Schemas": {
      "AccessControl": "iam",
      "Document": "doc",
      "File": "doc",
      "Workflow": "wf",
      "Search": "search",
      "Ocr": "ocr",
      "Operations": "ops"
    }
  }
}
