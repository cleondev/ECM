{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({Application}/{Environment}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "contoso.onmicrosoft.com",
    "TenantId": "00000000-0000-0000-0000-000000000000",
    "ClientId": "00000000-0000-0000-0000-000000000000",
    "Audience": "api://ecm-host"
  },
  "ConnectionStrings": {
    "postgres": "Host=localhost;Port=5432;Database=ecm;Username=postgres;Password=postgres",
    "AccessControl": "Host=localhost;Port=5432;Database=ecm;Username=postgres;Password=postgres"
  },
  "FileStorage": {
    "BucketName": "ecm-files",
    "ServiceUrl": "http://localhost:9000",
    "AccessKeyId": "minioadmin",
    "SecretAccessKey": "minioadmin",
    "Region": "us-east-1",
    "ForcePathStyle": true
  }
}
