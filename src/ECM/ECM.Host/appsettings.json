{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cache": {
    "Mode": "Off"
  },
  "DocumentUploadLimits": {
    "MaxRequestBodySize": 1073741824,
    "MultipartBodyLengthLimit": 1073741824
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({Application}/{Environment}) [Trace:{TraceId}] [Corr:{CorrelationId}] [Req:{RequestId}] [User:{UserId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "File": {
      "Enabled": true,
      "Directory": "logs",
      "Postfix": "-application.log",
      "DateFormat": "dd/MM/yyyy",
      "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] ({Application}/{Environment}) [Trace:{TraceId}] [Corr:{CorrelationId}] [Req:{RequestId}] [User:{UserId}] {Message:lj}{NewLine}{Exception}",
      "FlushToDiskIntervalSeconds": 1
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "istsvn.onmicrosoft.com",
    "TenantId": "b3b40bc6-b026-4f9b-abec-ab701dfeec71",
    "ClientId": "4b59d1fe-e515-4edf-905d-b09b04528fc3",
    "Audience": "api://istsvn.onmicrosoft.com/ecm-host"
  },
  "ApiKeys": {
    "Keys": [
      {
        "Name": "Local development",
        "Key": "dev-secret"
      },
      {
        "Name": "Integration app",
        "Key": "integration-secret"
      },
      {
        "Name": "LOS-APP",
        "Key": "admin123"
      }
    ]
  },
  "IAM": {
    "DefaultRoleName": "User"
  },
  "ConnectionStrings": {
    "IAM": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=iam;",
    "Document": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=doc;",
    "File": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=file;",
    "Workflow": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=wf;",
    "Search": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=search;",
    "Ocr": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=ocr;",
    "Operations": "Host=172.20.1.22;Port=5432;Database=ecm;Username=ecm_app;Password=admin123;SearchPath=ops;"
  },
  "FileStorage": {
    "BucketName": "ecm-files",
    "ServiceUrl": "http://172.20.1.10:9000",
    "AccessKeyId": "minio",
    "SecretAccessKey": "admin123",
    "Region": "vn-1",
    "ForcePathStyle": true
  },
  "Workflow": {
    "Camunda": {
      "BaseUrl": "http://localhost:8080/engine-rest",
      "TenantId": "default"
    }
  },
  "Ocr": {
    "Dot": {
      "BaseUrl": "http://localhost:7075/",
      "StartEndpoint": "api/samples",
      "SampleResultEndpointTemplate": "api/samples/{sampleId}/results",
      "BoxingResultEndpointTemplate": "api/samples/{sampleId}/boxings/{boxingId}/results",
      "BoxesEndpointTemplate": "api/samples/{sampleId}/boxes",
      "BoxValueEndpointTemplate": "api/samples/{sampleId}/boxes/{boxId}",
      "TimeoutSeconds": 100
    }
  }
}
