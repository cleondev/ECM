[
  {
    "name": "Tagging.DocumentUploaded",
    "rules": [
      {
        "name": "Customer ABC uploads",
        "condition": "customer == \"ABC\" || uploader == \"ABC\"",
        "set": {
          "Tags": [
            {
              "name": "ABC",
              "path": ["LOS", "CreditApplication", "Customer"],
              "scope": "group",
              "iconKey": "user",
              "color": "#2B6CB0"
            }
          ]
        }
      }
    ]
  },
  {
    "name": "Tagging.OcrCompleted",
    "rules": [
      {
        "name": "Invoice classifications",
        "condition": "classification == \"invoice\"",
        "set": {
          "Tags": [
            {
              "name": "Invoice",
              "path": ["LOS", "CreditApplication", "Document"],
              "scope": "group",
              "iconKey": "file-invoice"
            }
          ]
        }
      }
    ]
  }
]
