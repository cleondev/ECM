@model ConnectionInfoViewModel?

@if (Model is null)
{
    return;
}

@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <div class="text-uppercase text-muted small fw-semibold">Base URL</div>
                <div class="fs-6 fw-bold">@Model.BaseUrl</div>
                <div class="d-flex flex-wrap gap-2 mt-2">
                    @if (Model.UsingOnBehalfAuthentication)
                    {
                        <span class="badge bg-primary">On-behalf</span>
                    }
                    @if (Model.UsingSsoAuthentication)
                    {
                        <span class="badge bg-info text-dark">SSO</span>
                    }
                    @if (Model.UsingApiKeyAuthentication)
                    {
                        <span class="badge bg-secondary">API key</span>
                    }
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.OnBehalfUserEmail) || Model.OnBehalfUserId is not null)
                {
                    <div class="text-muted small mt-1">On-behalf: @(Model.OnBehalfUserEmail ?? Model.OnBehalfUserId?.ToString())</div>
                }
            </div>
            <form asp-action="SwitchUser" method="post" class="row g-2 align-items-end" asp-antiforgery="true">
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div class="col-auto">
                    <label class="form-label fw-semibold mb-1">User cấu hình</label>
                    <select name="userEmail" class="form-select">
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.Email" selected="@(user.IsSelected ? "selected" : null)">@user.DisplayName</option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-outline-primary mt-3">Chuyển</button>
                </div>
            </form>
        </div>
    </div>
</div>
