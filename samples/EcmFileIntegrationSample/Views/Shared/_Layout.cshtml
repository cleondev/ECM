<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECM file integration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">
    <header class="border-bottom bg-white mb-3">
        <div class="container py-3">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div>
                    <div class="fs-4 fw-bold mb-0">ECM File Integration Sample</div>
                    <div class="text-muted">Upload file qua HTTP API mà không cần đăng nhập.</div>
                </div>
                <a class="btn btn-outline-primary" href="https://github.com/" target="_blank" rel="noreferrer">Tài liệu ECM</a>
            </div>

            @{
                var action = ViewContext.RouteData.Values["action"]?.ToString();
                var documentActive = action is "Documents" or "EditDocument" or "DocumentDetail";
            }
            <nav class="nav nav-pills mt-3 gap-2">
                <a class="nav-link @(action == "Index" ? "active" : string.Empty)" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link @(action == "Upload" ? "active" : string.Empty)" asp-controller="Home" asp-action="Upload">Upload</a>
                <a class="nav-link @(documentActive ? "active" : string.Empty)" asp-controller="Home" asp-action="Documents">Tài liệu</a>
                <a class="nav-link @(action == "Tags" ? "active" : string.Empty)" asp-controller="Home" asp-action="Tags">Tag</a>
            </nav>
        </div>
    </header>
    <div class="container">
        @await Html.PartialAsync("_ConnectionBar", ViewBag.Connection as ConnectionInfoViewModel)
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
