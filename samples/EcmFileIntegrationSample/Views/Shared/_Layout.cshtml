<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECM file integration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">
    <header class="border-bottom bg-white mb-3 shadow-sm">
        <div class="container py-3">
            @{
                var action = ViewContext.RouteData.Values["action"]?.ToString();
                var documentActive = action is "Documents" or "EditDocument" or "DocumentDetail";
                var connection = ViewBag.Connection as ConnectionInfoViewModel;
                var returnUrl = Context.Request.Path + Context.Request.QueryString;
            }
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div>
                    <div class="fs-4 fw-bold mb-0">ECM File Integration Sample</div>
                    <div class="text-muted">Điều hướng giữa các màn hình mô phỏng ứng dụng thật.</div>
                </div>
                @if (connection is not null)
                {
                    <div class="text-end small text-muted">
                        <div class="fw-semibold text-dark">@connection.SelectedUserEmail</div>
                        <div>Base: @connection.BaseUrl</div>
                    </div>
                }
            </div>

            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mt-3">
                <nav class="nav nav-pills gap-2 flex-wrap">
                    <a class="nav-link @(action == "Index" ? "active" : string.Empty)" asp-controller="Home" asp-action="Index">Tổng quan</a>
                    <a class="nav-link @(documentActive ? "active" : string.Empty)" asp-controller="Home" asp-action="Documents">Documents</a>
                    <a class="nav-link @(action == "Upload" ? "active" : string.Empty)" asp-controller="Home" asp-action="Upload">Upload</a>
                    <a class="nav-link @(action == "Tags" ? "active" : string.Empty)" asp-controller="Home" asp-action="Tags">Tags</a>
                </nav>
                @if (connection is not null)
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @connection.SelectedUserEmail
                        </button>
                        <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 260px;">
                            <div class="small text-muted mb-2">Chọn user cho các action giao diện/API</div>
                            <form asp-controller="Home" asp-action="SwitchUser" method="post" class="d-flex gap-2 align-items-end" asp-antiforgery="true">
                                <input type="hidden" name="returnUrl" value="@returnUrl" />
                                <select name="userEmail" class="form-select form-select-sm">
                                    @foreach (var user in connection.Users)
                                    {
                                        <option value="@user.Email" selected="@(user.IsSelected ? "selected" : null)">@user.DisplayName</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary btn-sm">Đổi</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-primary" href="https://github.com/" target="_blank" rel="noreferrer">Tài liệu ECM</a>
                }
            </div>
        </div>
    </header>
    <div class="container">
        @await Html.PartialAsync("_ConnectionBar", ViewBag.Connection as ConnectionInfoViewModel)
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
