@model DocumentEditPageViewModel
@{
    ViewData["Title"] = "Cập nhật tài liệu";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Cập nhật tài liệu</h5>
    <a class="btn btn-outline-secondary" asp-action="Documents">Quay lại danh sách</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-warning" role="alert">@Model.Message</div>
}

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="EditDocument" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Form.UserEmail" />
                    <div class="mb-2">
                        <label asp-for="Form.DocumentId" class="form-label"></label>
                        <input asp-for="Form.DocumentId" class="form-control" />
                        <span asp-validation-for="Form.DocumentId" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label asp-for="Form.Title" class="form-label"></label>
                        <input asp-for="Form.Title" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Form.Status" class="form-label"></label>
                        <input asp-for="Form.Status" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Form.Sensitivity" class="form-label"></label>
                        <input asp-for="Form.Sensitivity" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Form.GroupId" class="form-label"></label>
                        <input asp-for="Form.GroupId" class="form-control" />
                        <div class="form-text">Chọn "Cập nhật Group ID" để đặt/loại bỏ giá trị này.</div>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input asp-for="Form.UpdateGroup" class="form-check-input" />
                        <label asp-for="Form.UpdateGroup" class="form-check-label"></label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Form.SelectedTagIds" class="form-label fw-semibold"></label>
                        @if (Model.Tags is { Count: > 0 })
                        {
                            <select asp-for="Form.SelectedTagIds" class="form-select" multiple size="6">
                                @foreach (var tag in Model.Tags)
                                {
                                    <option value="@tag.Id">@tag.Name (@(tag.NamespaceDisplayName ?? tag.NamespaceScope ?? "Không rõ namespace"))</option>
                                }
                            </select>
                            <div class="form-text">Chọn tag để gán hoặc bỏ gán cho tài liệu.</div>
                        }
                        else
                        {
                            <input class="form-control" value="Chưa có tag nào" disabled />
                            <div class="form-text">Tạo tag ở trang Tag để gắn vào tài liệu.</div>
                        }
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning text-white">Lưu thay đổi</button>
                        <a class="btn btn-outline-secondary" asp-action="DocumentDetail" asp-route-id="@Model.Detail?.Document.Id" target="_blank" rel="noreferrer">Xem chi tiết</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        @if (Model.Detail is not null)
        {
            <div class="card shadow-sm">
                <div class="card-header">Thông tin hiện tại</div>
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between mb-3">
                        <div>
                            <div class="fw-semibold">@Model.Detail.Document.Title</div>
                            <small class="text-muted">@Model.Detail.Document.Id</small>
                        </div>
                        @if (Model.Detail.DownloadUri is not null)
                        {
                            <a class="btn btn-sm btn-success" href="@Model.Detail.DownloadUri" target="_blank" rel="noreferrer">Tải file</a>
                        }
                    </div>

                    <dl class="row mb-0 small">
                        <dt class="col-4">Status</dt>
                        <dd class="col-8">@Model.Detail.Document.Status</dd>
                        <dt class="col-4">Độ nhạy</dt>
                        <dd class="col-8">@Model.Detail.Document.Sensitivity</dd>
                        <dt class="col-4">Doc type</dt>
                        <dd class="col-8">@Model.Detail.Document.DocType</dd>
                        <dt class="col-4">Group ID</dt>
                        <dd class="col-8">@Model.Detail.Document.GroupId</dd>
                        @if (Model.Detail.Document.LatestVersion is not null)
                        {
                            <dt class="col-4">Version</dt>
                            <dd class="col-8">v@Model.Detail.Document.LatestVersion.VersionNo (@Model.Detail.Document.LatestVersion.Bytes bytes)</dd>
                        }
                        @if (Model.Detail.Document.Tags is { Count: > 0 })
                        {
                            <dt class="col-4">Tags</dt>
                            <dd class="col-8">@string.Join(", ", Model.Detail.Document.Tags.Select(tag => tag.Name))</dd>
                        }
                    </dl>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">Không tải được chi tiết tài liệu, vui lòng quay lại danh sách.</div>
        }
    </div>
</div>
