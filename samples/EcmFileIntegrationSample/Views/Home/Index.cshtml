@using EcmFileIntegrationSample
@model HomePageViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Chào mừng tới sample ECM</h5>
                <p class="text-muted">Ứng dụng được chia thành các trang nhỏ để mô phỏng luồng làm việc thực tế: upload tài liệu, quản lý tag và xem danh sách tài liệu.</p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-primary" asp-action="Upload">Bắt đầu upload</a>
                    <a class="btn btn-outline-primary" asp-action="Documents">Xem danh sách tài liệu</a>
                    <a class="btn btn-outline-secondary" asp-action="Tags">Quản lý tag</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header">Thông tin người dùng hiện tại</div>
            <div class="card-body">
                @if (Model.Profile is not null)
                {
                    <p class="fw-semibold mb-1">@Model.Profile.DisplayName</p>
                    <p class="mb-1 text-muted">@Model.Profile.Email</p>
                    <p class="mb-0 small">User ID: @Model.Profile.Id</p>
                }
                else
                {
                    <p class="text-muted mb-0">Chưa lấy được profile. Kiểm tra cấu hình ApiKey/SSO.</p>
                }
            </div>
        </div>
    </div>
</div>
